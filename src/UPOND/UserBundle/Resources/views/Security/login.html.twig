{# src/OC/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "UPONDOrthophonieBundle::layout.html.twig" %}

{% block body %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
    <form  class="form-horizontal" action="{{ path('fos_user_security_check') }}" method="post">
        <div class="form-group">
            <label for="username">Login :</label>
            <input type="text" style="width: 250px;" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Login" />
        </div>

        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" style="width: 250px;" id="password" class="form-control" name="_password" placeholder="Password"/>
        </div>

        <div class="form-group">
            <input type="submit" value="Connexion" class="btn btn-primary"/>
        </div>
    </form>

{% endblock %}